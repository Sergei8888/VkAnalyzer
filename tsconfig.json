{
    "compilerOptions": {
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "useDefineForClassFields": true,
        "strict": true,
        "esModuleInterop": true,
        "incremental": false,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "importHelpers": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "isolatedModules": true,
        "noEmit": true,
        "types": [
            "vite/client",
            "@types/node",
            "@types/vk-openapi"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
